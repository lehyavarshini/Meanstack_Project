<!DOCTYPE html>
<html lang="en">
<head>
  <title>Doctors</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
      border: 1px solid #000; /* Add border to the table */
    }

    th, td {
      border: 1px solid #000; /* Add border to table cells */
      padding: 8px;
      text-align: left;
    }

    tbody tr:nth-child(odd) {
      background-color: #79BAEc; /* Add background color to odd rows */
    }

    tbody tr:nth-child(even) {
      background-color: #6495ED; /* Add background color to even rows */
    }

    .navbar {
      background-color: #f2f2f2;
      overflow: hidden;
    }
    
    tbody tr:hover {
      background-color: #D4F0F7;
    }

    .navbar a {
      float: left;
      display: block;
      color: blue;
      text-align: center;
      padding: 14px 20px;
      text-decoration: underline;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="/">Home</a>
  </div>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>firstName</th>
        <th>lastName</th>
        <th>dob</th>
        <th>gender</th>
        <th>email</th>
        <th>phone</th>
        <th>address</th>
        <th>specialization</th>
      </tr>
    </thead>
    <tbody style=" background-color:#1E90FF;">
      <% doctors.forEach(doctor => { %>
        <tr>
          <td><%= doctor.id %></td>
          <td><%= doctor.firstName %></td>
          <td><%= doctor.lastName %></td>
          <td><%= doctor.dob %></td>
          <td><%= doctor.gender %></td>
          <td><%= doctor.email %></td>
          <td><%= doctor.phone %></td>
          <td><%= doctor.address %></td>
          <td><%= doctor.specialization %></td> <!-- Changed from disease to specialization -->
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
